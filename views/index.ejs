<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Class Routine</title>
    <link rel="icon" href="../icon.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Baskervville+SC&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container py-4">
      <h1 class="mb-4 text-center display-5 routine-title">Class Routine</h1>
      <div class="mb-4 d-flex justify-content-center">
        <select id="daySelect" class="form-select w-auto">
          <% routine.routines.forEach((day, idx) => { %>
          <option value="<%= day.day %>"><%= day.day %></option>
          <% }) %>
        </select>
      </div>
      <div class="row g-4" id="routineCards">
        <% routine.routines.forEach((day, idx) => { %>
        <div
          class="col-md-6 col-lg-4 routine-day-card"
          data-day="<%= day.day %>"
        >
          <div class="card shadow-sm h-100">
            <div class="card-header bg-primary text-white">
              <h4 class="mb-0"><%= day.day %></h4>
            </div>
            <ul class="list-group list-group-flush">
              <% if(day.classes.length === 0) { %>
              <li
                class="list-group-item text-muted text-center no-classes-animate"
              >
                No Classes enjoy the day
              </li>
              <% } %> <% day.classes.forEach(cls => { const subject =
              routine.subjects.find(sub => sub.code === cls.subjectCode); %>
              <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="fw-bold"
                    ><%= cls.startTime %> - <%= cls.endTime %>
                  </span>
                  <span class="badge bg-secondary"><%= cls.room %></span>
                </div>
                <div class="mt-1">
                  <span class="subject-name"
                    ><%= subject ? subject.name : cls.subjectCode %>
                  </span>
                  <br />
                  <small class="text-muted"
                    >Teacher: <%= subject ? subject.teacher : "Unknown" %>
                  </small>
                </div>
              </li>
              <% }) %>
            </ul>
          </div>
        </div>
        <% }) %>
      </div>
      <div class="mt-5">
        <h3 class="mb-3">Subjects</h3>
        <div class="table-responsive">
          <table class="table table-bordered table-striped align-middle">
            <thead class="table-primary">
              <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Teacher</th>
              </tr>
            </thead>
            <tbody>
              <% routine.subjects.forEach(sub => { %>
              <tr>
                <td><%= sub.code %></td>
                <td><%= sub.name %></td>
                <td><%= sub.teacher %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script>
      // filepath: /home/imran-ali/Documents/Coding/GitClones/Class-Routine/views/index.ejs
      // Helper to get today's day name
      function getTodayName() {
        const days = [
          "Sunday",
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday",
          "Saturday",
        ];
        return days[new Date().getDay()];
      }

      // Show only the selected day's card
      function showDay(dayName) {
        document.querySelectorAll(".routine-day-card").forEach((card) => {
          if (card.getAttribute("data-day") === dayName) {
            card.style.display = "";
          } else {
            card.style.display = "none";
          }
        });
      }

      // On page load, set default to today
      document.addEventListener("DOMContentLoaded", function () {
        const today = getTodayName();
        const select = document.getElementById("daySelect");
        let found = false;
        for (let i = 0; i < select.options.length; i++) {
          if (select.options[i].value === today) {
            select.selectedIndex = i;
            found = true;
            break;
          }
        }
        if (!found) select.selectedIndex = 0;
        showDay(select.value);

        select.addEventListener("change", function () {
          showDay(this.value);
        });
      });
    </script>
  </body>
</html>
